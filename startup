#!/bin/bash

feh --bg-scale $HOME/pictures/wallpapers/wallpaper.jpg&
bash $HOME/.config/polybar/launch.sh&

# Load saved workspace layouts
i3-msg "workspace 1; append_layout ~/.config/i3/layouts/ws-1.json"&
i3-msg "workspace 3; append_layout ~/.config/i3/layouts/ws-3.json"&

# Startup programs to be swallowed by i3
#  ws-1
urxvt -name "w1t1" -e $SHELL -c 'status; $SHELL -i'&
urxvt -name "w1t2" --hold -e $SHELL -c 'neofetch'&
urxvt -name "w1t3" -e $SHELL -c 'gotop'&
#  ws-2
i3-msg 'workspace 2; exec firefox'&
#  ws-3
atom&
firefox -browser&
urxvt -name "w3t1" -e $SHELL -c 'cd ~/projects/; $SHELL -i'&
#  ws-4
i3-msg 'workspace 4; exec thunderbird'&
#  ws-5
i3-msg 'workspace 5; exec teams'&
#  ws-9
i3-msg 'workspace 9; exec urxvt -e $SHELL -c 'cava''&
#  ws-10
spotify&

# Other startup programs
dunst -config ~/.config/dunst/dunstrc&
tunefans&
udiskie&

i3-msg 'workspace 1'
